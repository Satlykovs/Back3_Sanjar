@model Order

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-5">
        <h2>Детали заказа</h2>

        <dl class="row">
            <dt class="col-sm-2">ID заказа</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">Имя клиента</dt>
            <dd class="col-sm-10">@Model.Customer?.Name</dd>

            <dt class="col-sm-2">Email клиента</dt>
            <dd class="col-sm-10">@Model.Customer?.Email</dd>

            <dt class="col-sm-2">Товары в заказе</dt>
            <dd class="col-sm-10">
                <ul class="list-unstyled">
                    @foreach (var product in Model.Products)
                    {
                        <li>@product.Name - @product.Price</li>
                    }
                </ul>
            </dd>
        </dl>

        <a asp-action="Index" class="btn btn-primary mt-3">Назад к списку заказов</a>
    </div>
</body>